{

  "manifest_version": 2,
  "name": "KeyPoint",
  "version": "0.1",

  "description": "Summarise articles from your favorite sites and only read what you need",
  "homepage_url": "https://github.com/",

  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],

  "browser_action": {
    "default_title": "NLP",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
  
}